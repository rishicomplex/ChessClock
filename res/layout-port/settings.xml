
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/pieceport" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/hh1"
                android:layout_width="55dp"
                android:maxLength="2"
                android:layout_height="55dp"
                android:inputType="number"
                android:text="00"
                android:textSize="30dp" >
            </EditText>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="30dp" >
            </TextView>

            <EditText
                android:id="@+id/mm1"
                android:layout_width="55dp"
                android:maxLength="2"
                android:layout_height="55dp"
                android:inputType="number"
                android:text="00"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="30dp" >
            </TextView>

            <EditText
                android:id="@+id/ss1"
                android:layout_width="55dp"
                android:maxLength="2"
                android:layout_height="55dp"
                android:inputType="number"
                android:text="00"
                android:textSize="30dp" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/hh2"
                android:layout_width="55dp"
                android:maxLength="2"
                android:layout_height="55dp"
                android:inputType="number"
                android:text="00"
                android:textSize="30dp" >
            </EditText>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="30dp" >
            </TextView>

            <EditText
                android:id="@+id/mm2"
                android:layout_width="55dp"
                android:maxLength="2"
                android:layout_height="55dp"
                android:inputType="number"
                android:text="00"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="30dp" >
            </TextView>

            <EditText
                android:id="@+id/ss2"
                android:layout_width="55dp"
                android:maxLength="2"
                android:layout_height="55dp"
                android:inputType="number"
                android:text="00"
                android:textSize="30dp" >

                <requestFocus />
            </EditText>
        </LinearLayout>

    </LinearLayout>
